/* components/item.wxss */
.item {
  line-height: 2rem;
}

.item .head,
.item .icon {
  height: 2rem;
}

.item .head .title {
  font-size: 20px;
}

.item .content {
  /* display: block; */
  height: 100%;
  line-height: 1.5rem;
}

.item .content .time .timeItem {
  width: 2rem;
  text-align: center;
}

.item .icon .icon-edit,
.item .icon .icon-more {
  transition: 1s;
}

.item .icon .transform {
  transform: rotate(180deg);
}

.item .op01 {
  opacity: .1;
}

.item .op1 {
  opacity: 1;
}
